    <dependencyManagement>
        <dependencies>
            <!-- Eigene API dependencies ================================ -->            
            <dependency>
                <groupId>${project.groupId}</groupId>
                <artifactId>agol-writer</artifactId>
                <version>${project.version}</version>
            </dependency>  
			<dependency>
                <groupId>${project.groupId}</groupId>
